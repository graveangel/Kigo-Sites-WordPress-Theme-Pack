/* Control Panel: Tape Chart Booking Detail */
<script id="tmpl-cp-tapechart-bookingdetail" type="text/html">
<div>
<div class="dl-2col">
<dl>
    <dt>Booking ID:</dt>
    <dd>{{BookingID}}</dd>
</dl>
<div class="clear"></div>
<dl>
    <dt>{{textdata.Type}}:</dt>
    <dd>{{Type}}</dd>
</dl>
<dl>
    <dt>Status:</dt>
    <dd>{{Status}}</dd>
</dl>
<dl>
    <dt>Check-in:</dt>
    <dd>{{CheckInDisplay}}</dd>
</dl>
<dl>
    <dt>Check-out:</dt>
    <dd>{{CheckOutDisplay}}</dd>
</dl>
<dl>
    <dt>#Nights:</dt>
    <dd>{{LOS}}</dd>
</dl>
<dl>
    <dt>Unit Booked:</dt>
    <dd>{{PropertyHeadline}}</dd>
</dl>
<div class="clear2"></div>

<h5>{{textdata.Renter}}</h5>
<dl>
    <dt>{{textdata.Name}}:</dt>
    <dd>{{RenterName}}</dd>
</dl>
<div class="clear"></div>
<dl>
    <dt>{{textdata.Phone}}:</dt>
    <dd>{{Phone}}</dd>
</dl>
<dl>
    <dt>Email:</dt>
    <dd>{{Email}}</dd>
</dl>
<div class="clea2"></div>

<h5>{{textdata.Statement}}</h5>
<dl>
    <dt>Total Stay:</dt>
    <dd>{{Amount}}</dd>
</dl>
<div class="clear"></div>
<dl>
    <dt>Total Due:</dt>
    <dd></dd>
</dl>
<dl>
    <dt>Due On:</dt>
    <dd>{{DueOn}}</dd>
</dl>
</div>
</div>
</script>

